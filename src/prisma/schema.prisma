generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


model Block {
  hash String @id @map("_id") @db.ObjectId
  data Json

  @@map("blocks")
}

model Initiative {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  title String
  description String
  party String
  file_url String

  messages Message[]
  embeddings InitiativeEmbedding[]

  @@map("initiatives")
}

model Message {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  owner String
  content String
  initiative_id String @db.ObjectId

  initiative Initiative @relation(fields: [initiative_id], references: [id])

  @@map("messages")
}

model InitiativeEmbedding {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  content String
  plot_embedding Float[]
  initiative_id String @db.ObjectId

  initiative Initiative @relation(fields: [initiative_id], references: [id])

  @@map("initiative_embeddings")
}
